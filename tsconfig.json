{
  "compilerOptions": {
    "target": "ES6",                       // Target JavaScript version (ES6/ES2015)
    "module": "commonjs",                  // Module system (commonjs for Node.js)
    "outDir": "./dist",                    // Output directory for compiled files
    "rootDir": "./src",                    // Root directory for input TypeScript files
    "strict": true,                         // Enable strict type-checking options
    "esModuleInterop": true,               // Enable compatibility with ES modules
    "skipLibCheck": true,                  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
  },
  "include": [
    "src/**/*.ts"  // Include all .ts files in the 'src' directory
  ],
  "exclude": [
    "node_modules"  // Exclude the 'node_modules' directory
  ]
}
